Subject: [PATCH 1/4] d4xx: add dtsi for d4xx camera

Signed-off-by: Emil Jahshan <emil.jahshan@intel.com>
---
 .../tegra186-camera-d4xx.dtsi                 | 432 ++++++++++++++++++
 1 file changed, 432 insertions(+)
 create mode 100644 kernel-dts/t18x-common-modules/tegra186-camera-d4xx.dtsi

diff --git a/kernel-dts/t18x-common-modules/tegra186-camera-d4xx.dtsi b/kernel-dts/t18x-common-modules/tegra186-camera-d4xx.dtsi
new file mode 100644
index 0000000..dd20b7e
--- /dev/null
+++ b/kernel-dts/t18x-common-modules/tegra186-camera-d4xx.dtsi
@@ -0,0 +1,432 @@
+#define CAMERA_I2C_MUX_BUS(x) (0x1E + x)
+#define CAM0_PWDN TEGRA_MAIN_GPIO(R, 0)
+#define CAM2_PWDN TEGRA_MAIN_GPIO(X, 0)
+#define CAM4_PWDN TEGRA_MAIN_GPIO(K, 0)
+
+/ {
+	i2c@3180000 {
+		clock-frequency = <100000>;
+		tca9548@72 {
+			reg = <0x72>;
+			compatible = "nxp,pca9548";
+			#address-cells = <1>;
+			#size-cells = <0>;
+			vcc-supply = <&vdd_3v3>;
+			vcc-pullup-supply = <&en_vdd_cam>;
+			/*skip_mux_detect;*/
+			force_bus_start = <CAMERA_I2C_MUX_BUS(0)>;
+			i2c@0 {
+				reg = <0x0>;	// line 4 of the I2C switch
+				#address-cells = <0x1>;
+				i2c-mux,deselect-on-exit;
+				#size-cells = <0x0>;
+
+				d4m0: d4m@10 {
+					status = "ok";
+					reg = <0x10>;
+					compatible = "intel,d4xx";
+					vcc-supply = <&en_vdd_cam>;
+					pwdn-gpios = <&tegra_main_gpio CAM0_PWDN GPIO_ACTIVE_HIGH>;
+					cam-type = "Depth";
+					ports {
+						#address-cells = <1>;
+						#size-cells = <0>;
+
+						port@0 {
+							reg = <0>;
+							d4m0_out: endpoint {
+								port-index = <1>;
+								bus-width = <2>;
+								remote-endpoint = <&csi_in0>;
+								src_depth0: source@0 {
+									data-types = <0x31>;
+									virt-chan = <0>;
+								};
+								src_y0: source@1 {
+									data-types = < 0x2a
+											0x1e
+											0x2b
+											0x32
+											0x24>;
+									virt-chan = <0>;
+								};
+							};
+						};
+					};
+					/* mode0: Y8, mode1: depth D16 */
+					mode0 {
+						pixel_t = "grey_y8";
+						num_lanes = "2";
+						active_w = "1280";
+						active_h = "720";
+						tegra_sinterface = "serial_e";
+						mclk_khz = "24000";
+						/*pix_clk_hz = "148500000";*/ /* for 2 streams? */
+						/*pix_clk_hz = "37125000";*/
+						pix_clk_hz = "375000000";
+						discontinuous_clk = "no";
+						dpcm_enable = "false";
+						cil_settletime = "0";
+						line_length = "1280"; /* 2200 */
+						mclk_multiplier = "15.625";
+						embedded_metadata_height = "0";
+						min_framerate = "6";
+						max_framerate = "30";
+					};
+					mode1 {
+						pixel_t = "grey_y16";
+						num_lanes = "2";
+						active_w = "1280";
+						active_h = "720";
+						tegra_sinterface = "serial_e";
+						mclk_khz = "24000";
+						/*pix_clk_hz = "148500000";*/ /* for 2 streams? */
+						/*pix_clk_hz = "74250000";*/
+						pix_clk_hz = "375000000";
+						discontinuous_clk = "no";
+						dpcm_enable = "false";
+						cil_settletime = "0";
+						line_length = "1280"; /* 2200 */
+						mclk_multiplier = "15.625";
+						embedded_metadata_height = "0";
+						min_framerate = "6";
+						max_framerate = "30";
+					};
+				};
+			};
+			i2c@1 { //RGB0
+				reg = <0x3>; 	// line 18-19 of the I2C switch
+				#address-cells = <0x1>;
+				i2c-mux,deselect-on-exit;
+				#size-cells = <0x0>;
+
+				d4m1: d4m@10 {
+					status = "ok";
+					reg = <0x10>;
+					compatible = "intel,d4xx";
+					vcc-supply = <&en_vdd_cam>;
+					pwdn-gpios = <&tegra_main_gpio CAM2_PWDN GPIO_ACTIVE_HIGH>;
+					cam-type = "RGB";
+					ports {
+						#address-cells = <1>;
+						#size-cells = <0>;
+
+						port@0 {
+							reg = <0>;
+							d4m1_out: endpoint {
+								port-index = <3>;
+								bus-width = <2>;
+								remote-endpoint = <&csi_in1>;
+							};
+						};
+					};
+					/*mode0: RGB D16 */
+					mode0 {
+						pixel_t = "grey_y8";
+
+						num_lanes = "2";
+						active_w = "1920";
+						active_h = "1080";
+						tegra_sinterface = "serial_e";
+						mclk_khz = "24000";
+						/*pix_clk_hz = "148500000";*/ /* for 2 streams? */
+						/*pix_clk_hz = "74250000";*/
+						pix_clk_hz = "375000000";
+						discontinuous_clk = "no";
+						dpcm_enable = "false";
+						cil_settletime = "0";
+						line_length = "1280"; /* 2200 */
+						mclk_multiplier = "15.625";
+						embedded_metadata_height = "0";
+						min_framerate = "6";
+						max_framerate = "30";
+					};
+				};
+			};
+
+		};
+	};
+
+	host1x {
+		csi_base: nvcsi@150c0000 {
+			#address-cells = <0x1>;
+			#size-cells = <0x0>;
+
+			num-channels = <6>;
+
+			channel@0 {
+				reg = <0x0>;
+				status = "ok";
+
+				ports {
+					#address-cells = <0x1>;
+					#size-cells = <0x0>;
+
+					port@0 {
+						reg = <0>;
+						status = "ok";
+
+						csi_in0: endpoint@0 {
+							status = "ok";
+							port-index = <0>;
+							bus-width = <2>;
+							remote-endpoint = <&d4m0_out>;
+						};
+					};
+					port@1 {
+						reg = <1>;
+						status = "ok";
+						csi_out0: endpoint@1 {
+							status = "ok";
+							remote-endpoint = <&vi_in0>;
+						};
+					};
+
+				};
+			};
+			channel@1 {
+				reg = <0x1>;
+				status = "ok";
+
+				ports {
+					#address-cells = <0x1>;
+					#size-cells = <0x0>;
+
+					port@0 {
+						reg = <0>;
+						status = "ok";
+
+						csi_in1: endpoint@2 {
+							status = "ok";
+							port-index = <1>;
+							bus-width = <2>;
+							remote-endpoint = <&d4m1_out>;
+						};
+					};
+					port@1 {
+						reg = <1>;
+						status = "ok";
+						csi_out1: endpoint@3 {
+							status = "ok";
+							remote-endpoint = <&vi_in1>;
+						};
+					};
+
+				};
+			};
+			channel@2 {
+				reg = <0x2>;
+				status = "disabled";
+
+				ports {
+					#address-cells = <0x1>;
+					#size-cells = <0x0>;
+
+					port@0 {
+						reg = <0>;
+						status = "ok";
+
+						csi_in2: endpoint@4 {
+							status = "ok";
+							port-index = <2>;
+							bus-width = <2>;
+							remote-endpoint = <&d4m1_out/*&d4m2_out0*/>;
+						};
+					};
+					port@1 {
+						reg = <1>;
+						status = "ok";
+						csi_out2: endpoint@5 {
+							status = "ok";
+							remote-endpoint = <&vi_in2>;
+						};
+					};
+				};
+			};
+			channel@3 {
+				reg = <0x3>;
+				status = "disabled";
+
+				ports {
+					#address-cells = <0x1>;
+					#size-cells = <0x0>;
+
+					port@0 {
+						reg = <0>;
+						status = "ok";
+
+						csi_in3: endpoint@6 {
+							status = "ok";
+							port-index = <3>;
+							bus-width = <2>;
+							//remote-endpoint = <&d4m3_out>;
+						};
+					};
+					port@1 {
+						reg = <1>;
+						status = "ok";
+						csi_out3: endpoint@7 {
+							status = "ok";
+							remote-endpoint = <&vi_in3>;
+						};
+					};
+				};
+			};
+			channel@4 {
+				reg = <0x4>;
+				status = "disabled";
+
+				ports {
+					#address-cells = <0x1>;
+					#size-cells = <0x0>;
+
+					port@0 {
+						reg = <0>;
+						status = "ok";
+
+						csi_in4: endpoint@8 {
+							status = "ok";
+							port-index = <4>;
+							bus-width = <2>;
+							//remote-endpoint = <&d4m2_out>;
+						};
+					};
+					port@1 {
+						reg = <1>;
+						status = "ok";
+						csi_out4: endpoint@9 {
+							status = "ok";
+							remote-endpoint = <&vi_in4>;
+						};
+					};
+				};
+			};
+			channel@5 {
+				reg = <0x5>;
+				status = "disabled";
+
+				ports {
+					#address-cells = <0x1>;
+					#size-cells = <0x0>;
+
+					port@0 {
+						reg = <0>;
+						status = "ok";
+
+						csi_in5: endpoint@10 {
+							status = "ok";
+							port-index = <5>;
+							bus-width = <2>;
+							remote-endpoint = <&d4m1_out/*&d4m2_out5*/>;
+						};
+					};
+					port@1 {
+						reg = <1>;
+						status = "ok";
+						csi_out5: endpoint@11 {
+							status = "ok";
+							remote-endpoint = <&vi_in5>;
+						};
+					};
+				};
+			};
+		};
+
+		vi_base: vi@15700000 {
+			num-channels = <6>;
+
+			ports {
+				#address-cells = <0x1>;
+				#size-cells = <0x0>;
+
+				port@0 {
+					reg = <0>;
+					status = "ok";
+
+					vi_in0: endpoint {
+						status = "ok";
+						port-index = <0>;
+						bus-width = <2>;
+						remote-endpoint = <&csi_out0>;
+					};
+				};
+				port@1 {
+					reg = <1>;
+					status = "disabled";
+
+					vi_in1: endpoint {
+						status = "ok";
+						port-index = <1>;
+						bus-width = <2>;
+						remote-endpoint = <&csi_out1>;
+					};
+				};
+				port@2 {
+					reg = <2>;
+					status = "ok";
+
+					vi_in2: endpoint {
+						status = "ok";
+						port-index = <2>;
+						bus-width = <2>;
+						remote-endpoint = <&csi_out2>;
+					};
+				};
+				port@3 {
+					reg = <3>;
+					status = "ok";
+
+					vi_in3: endpoint {
+						status = "ok";
+						port-index = <3>;
+						bus-width = <2>;
+						remote-endpoint = <&csi_out3>;
+					};
+				};
+				port@4 {
+					reg = <4>;
+					status = "ok";
+
+					vi_in4: endpoint {
+						status = "ok";
+						port-index = <4>;
+						bus-width = <2>;
+						remote-endpoint = <&csi_out4>;
+					};
+				};
+				port@5 {
+					reg = <5>;
+					status = "disabled";
+
+					vi_in5: endpoint {
+						status = "ok";
+						port-index = <5>;
+						bus-width = <2>;
+						remote-endpoint = <&csi_out5>;
+					};
+
+				};
+			};
+			sources {
+				source@0 {
+					remote-source = <&src_depth0>;
+				};
+				source@1 {
+					remote-source = <&src_y0>;
+				};
+				//source@2 {
+				//	remote-source = <&src_depth1>;
+				//};
+				//source@3 {
+				//	remote-source = <&src_y1>;
+				//};
+				//source@4 {
+				//	remote-source = <&src_depth2>;
+				//};
+				//source@5 {
+				//	remote-source = <&src_y2>;
+				//};
+			};
+		};
+	};
+};
