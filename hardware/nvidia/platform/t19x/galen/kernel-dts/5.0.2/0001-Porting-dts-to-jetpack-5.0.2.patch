+			status = "ok";
+			reg = <0x72>;
+			compatible = "nxp,pca9548";
+			#address-cells = <1>;
+			#size-cells = <0>;
+			skip_mux_detect = "yes";
+			vcc-supply = <&p2822_vdd_1v8_cvb>;
+			/*vcc-pullup-supply = <&battery_reg>;*/
+			force_bus_start = <CAMERA_I2C_MUX_BUS(0)>;
