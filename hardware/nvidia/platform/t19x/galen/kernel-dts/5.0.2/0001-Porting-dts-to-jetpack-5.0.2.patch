+						discontinuous_clk = "no";
+						dpcm_enable = "false";
+						cil_settletime = "0";
+						line_length = "1280"; /* 2200 */
+						mclk_multiplier = "15.625";
+						embedded_metadata_height = "0";
+						min_framerate = "5";
+						max_framerate = "30";
+						default_framerate = "30";
+						vc_id = "2";
+					};
+				};
+			};
