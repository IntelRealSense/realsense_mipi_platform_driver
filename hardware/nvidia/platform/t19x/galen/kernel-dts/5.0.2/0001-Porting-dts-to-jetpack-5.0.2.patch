+				reg = <0x0>;	// line 4 of the I2C switch
+				#address-cells = <0x1>;
+				i2c-mux,deselect-on-exit;
+				#size-cells = <0x0>;
+
+				dser: max9296@48 {
+					status = "ok";
+					reg = <0x48>;
+					compatible = "maxim,max9296";
+					#address-cells = <1>;
+					#size-cells = <0>;
+					skip_mux_detect = "yes";
